<Window x:Class="MazeSolverVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeSolverVisualizer"
        mc:Ignorable="d"
        Title="Algo visualizer" WindowState="Maximized" Height="1080" Width="1920"
        Background="#3C3C3C"
        >

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <!--Controlls:-->
       
        <!--Generator-->
        <Button x:Name="GUI_generateMaze" Click="GUI_generateMaze_Click" Content="Generate Maze" 
                VerticalAlignment="Top" HorizontalAlignment="Left" Height="25" Margin="5" Grid.Column="1" />

        <Button x:Name="GUI_resetMaze" Click="GUI_resetMaze_Click" Content="Clean Maze"
                VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,5,159,0" Height="25" Grid.Column="1" />

        <CheckBox x:Name="GUI_easyMazeToggle" Content="Easy Maze" Click="GUI_easyMazeToggle_Click" 
                  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="175,12,0,0" Grid.Column="1"
                  IsChecked="True" />
        
        <TextBox x:Name="GUI_cellSize" 
                 Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50" Margin="5,35,0,0" />

        <TextBlock x:Name="GUI_cellSizeText" Text=":Visualizer Size" 
                   Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="60,35,0,0"/>

        <TextBox x:Name="GUI_mazeSize" 
                 Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50" Margin="5,56,0,0" />

        <TextBlock x:Name="GUI_mazeSizeText" Text=":Maze Size" 
                   Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="60,56,0,0"/>


        <!--Solver-->
        <Button x:Name="GUI_solve" Click="GUI_solve_Click" Content="Solve Maze" 
                VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,97,0,0" Height="25" Grid.Column="1" />

        <ComboBox Name="GUI_solverSelect" 
                  VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" Height="25" Margin="80,96,0,0" Width="85" >
            <ComboBoxItem Content="BFS" />
            <ComboBoxItem Content="RightWinder" />
            <ComboBoxItem Content="Random" />
        </ComboBox>
        

        <!--Animation-->
        <Grid Grid.Column="1" Height="60" Width="155" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,147,0,0">
            <CheckBox x:Name="GUI_animationToggle" Content="Algorithm Animation" Click="GUI_animationToggle_Clicked" 
                      VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5, 0" Grid.Column="1" />

            <TextBox x:Name="GUI_animationSleep" TextChanged="GUI_animationSleep_TextChanged"
                     Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50" Margin="5, 20" 
                     Visibility="Collapsed" />

            <TextBlock x:Name="GUI_animationSleepText" Text=":Animation Speed"
                       Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="60, 20, 0, 0" 
                       Visibility="Collapsed" />
        </Grid>
        
        
        <!--VISUALIZER-->
        <ScrollViewer x:Name="GUI_scrollbar" 
                      HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
            <Canvas x:Name="GUI_visualizer" 
                    Width="2100" Height="2100" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image x:Name="GUI_visualizerImage"/>
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>
