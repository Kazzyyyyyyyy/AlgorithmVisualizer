<Window x:Class="MazeSolverVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:s="clr-namespace:System;assembly=System.Runtime"
        xmlns:msvd="clr-namespace:MazeSolverVisualizer"
        mc:Ignorable="d"
        Title="Algo visualizer" WindowState="Maximized" Height="1080" Width="1920"
        Background="#3C3C3C" >

    <!--SolverAlgorithm combobox enum parse-->
    <Window.Resources>
        <ObjectDataProvider x:Key="SolverAlgorithmsData" 
                    MethodName="GetValues" 
                    ObjectType="{x:Type s:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="msvd:SolverAlgorithms" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <!--output-->
        <TextBlock x:Name="GUI_outPut" TextWrapping="Wrap" Grid.Column="1" Margin="5, 300" FontSize="15" />


        <!--Controls:-->
        <Grid x:Name="GUI_controls" Grid.Column="1">
            <!--Generator-->
            <Button x:Name="GUI_generateMaze" Click="GUI_button_Click" Content="Generate Maze" 
                    VerticalAlignment="Top" HorizontalAlignment="Left" Height="25" Margin="5" />

            <Button x:Name="GUI_resetMaze" Click="GUI_resetMaze_Click" Content="Clean Maze"
                    VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,5,159,0" Height="25" />

            <CheckBox x:Name="GUI_imperfectMazeToggle" Content="Imperfect Maze" Click="GUI_imperfectMazeToggle_Click" 
                      VerticalAlignment="Top" HorizontalAlignment="Left" Margin="175,12,0,0" />

            <TextBox x:Name="GUI_visualizerCellSize" 
                     VerticalAlignment="Top" HorizontalAlignment="Left" Width="50" Margin="5,35,0,0" />

            <TextBlock Text=":Visualizer Size" 
                       VerticalAlignment="Top" HorizontalAlignment="Left" Margin="60,35,0,0"/>

            <TextBox x:Name="GUI_mazeSize" 
                     VerticalAlignment="Top" HorizontalAlignment="Left" Width="50" Margin="5,56,0,0" />

            <TextBlock x:Name="GUI_mazeSizeText" Text=":Maze Size" 
                       VerticalAlignment="Top" HorizontalAlignment="Left" Margin="60,56,0,0"/>

            <!--Solver-->
            <Button x:Name="GUI_solveMaze" Click="GUI_button_Click" Content="Solve Maze" 
                    VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,97,0,0" Height="25" />

            <ComboBox Name="GUI_solverSelector"
                  VerticalAlignment="Top" HorizontalAlignment="Left" Height="25"
                  Margin="80,96,0,0" Width="105"
                  ItemsSource="{Binding Source={StaticResource SolverAlgorithmsData}}"
                  SelectionChanged="GUI_solverSelector_SelectionChanged" />

            <!--A*-->
            <TextBox x:Name="GUI_AStarGreed"
                     VerticalAlignment="Top" HorizontalAlignment="Left" Width="50" Margin="194,104,0,0" />

            <TextBlock Text="A* greed (accuracy &lt; speed)" Name="GUI_AStarGreedText"
                       VerticalAlignment="Top" HorizontalAlignment="Left" Margin="194,127,0,0" Width="68" TextWrapping="Wrap" />

            <!--Animations-->
            <CheckBox x:Name="GUI_animationToggle" Content="Algorithm Animation" Click="GUI_animationToggle_Clicked" 
                      VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5, 147" IsChecked="True" />

            <TextBox x:Name="GUI_animationSpeed"
                     VerticalAlignment="Top" HorizontalAlignment="Left" Width="50" Margin="5, 167" />

            <TextBlock Text=":Animation Speed" Name="GUI_animationSpeedText"
                       VerticalAlignment="Top" HorizontalAlignment="Left" Margin="60, 167" />

            <CheckBox x:Name="GUI_highlightCurrentPos" Content="Highlight current pos" Click="GUI_highlightCurrentPos_Click" 
                      VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5, 187" IsChecked="False" />
        </Grid>


        <!--Visualizer-->
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
            <Canvas x:Name="GUI_visualizer" 
                    Width="2100" Height="2100" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image x:Name="GUI_visualizerBitmap"/>
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>
